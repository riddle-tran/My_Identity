<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:weightSum="8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleX="0.2"
        android:scaleY="0.8"
        android:background="@drawable/icontocao"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:background="@drawable/icontocao1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_ten"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Ten ca nhan/to chuc" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:background="@drawable/icontocao2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_thanhpho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Thanh pho/Tinh" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:background="@drawable/icontocao3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_quan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Quan/Huyen" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:background="@drawable/icontocao4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edit_diachi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Dia chi" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:background="@drawable/icontocao5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>

        <EditText

            android:id="@+id/edit_noidung"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Noi dung" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <Button
            android:id="@+id/button_gui"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#3a48e2"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Gá»¬I "
            android:textColor="#e7ecec"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>
