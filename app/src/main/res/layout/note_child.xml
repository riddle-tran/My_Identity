<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/textClock_note"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:background="@drawable/kvx_btwhitegreen_default"
            android:gravity="center"
            android:text="TextView"
            android:textAllCaps="false"
            android:layout_marginRight="3dp"
            android:textColor="#fa2702"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttomNote"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="2"
            android:background="@drawable/kvx_btwhiteblue_default"
            android:text="Edit"
            android:textAllCaps="false"
            android:fontFamily="serif"
            android:textSize="10sp"
            android:letterSpacing="0.08"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textChildNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kvx_btwhiteyellow_default"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingBottom="4dp"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
